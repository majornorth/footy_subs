<div class="comment" id="comment-<%= comment.id %>">
  <hr/>
  <%= button_to "×", comment_path(comment), :method => :delete, :remote => true, :disable_with => "×", :class => 'close delete-confirmation' %>
  <h4>
    <%= comment.user.firstName %>
    <small>
      <%= comment.updated_at %>
    </small>
  </h4>
  <p>
    <%= comment.body %>
  </p>
</div>
