<div class="content">
  <div class="content-padded">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.label :email, 'Email', :style => "display: none;" %>
        <%= f.email_field :email, :placeholder => "Email", :autocorrect => "off", :autocapitalize => "off", :required => true, :autofocus => true %>
        <% if @user.errors[:email].any? %>
          <div class="error-explanation">
          <p>Please make sure your email is correct.</p>
          </div>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send Reset Instructions", class: 'button-main button-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>