<header class="bar-title">
	<% if signed_in? %>
		<%= link_to image_tag("/assets/icon-settings.png", :height => "25px"), "/users/#{current_user.id}/edit", class: "button", :style => "padding-bottom: 0;" %>
	<% else %>
		<%= link_to "Sign in", signin_path, class: "button" %>
	<% end %>

	<h1 class="title">
		<span style="display: none;">Footy Subs</span>
		<img src="/assets/footy-subs.png" style="margin-top: 7px;" width="97px" height="35px">
	</h1>
	<% if signed_in? %>
		<%= link_to image_tag("/assets/icon-post.png", :height => "22px", :style => "padding-top: 2px;"), new_event_path, class: "button", :style => "padding-bottom: 0;" %>
	<% else %>
		<%= link_to "Sign up", new_user_path, class: "button" %>
	<% end %>
</header>

<div class="content">

		<ul class="list">

		<% if signed_in? %>
			<div class="lastOpen">
				<% @organized.each do |e| %>
					<% if e.status == "open" || e.status == "full" %>
						<li class="organized"><%= link_to(event_path(e.id)) do %><span><%= e.start.strftime("%a, %b %e at %l:%M%P") %></span>
						<span class="count">You have <%= e.users.count %> of <%= e.needed %></span>
						<p><%= e.location %></p><% end %>
					  </li>
					<% end %>
				<% end %>

				<% @joined.each do |e| %>
					<% if e.status == "open" && e.users.include?(current_user) || e.status == "full" && e.users.include?(current_user) %>
						<li class="joined"><%= link_to(event_path(e.id)) do %><span><%= e.start.strftime("%a, %b %e at %l:%M%P") %></span>
						<span class="count">Joined</span>
						<p><%= e.location %></p><% end %>
						</li>
					<% end %>
				<% end %>

				<% @open.each do |e| %>
					<% if e.users.exclude?(current_user) && e.organizer_id != current_user.id %>
						<li class="open"><%= link_to(event_path(e.id)) do %><span><%= e.start.strftime("%a, %b %e at %l:%M%P") %></span>
						<span class="count"><%= e.users.count %> / <%= e.needed %></span>
						<p><%= e.location %></p><% end %>
						</li>
					<% end %>
				<% end %>
			</div>

			<% @full.each do |e| %>
				<% if e.users.exclude?(current_user) && e.organizer_id != current_user.id  %>
					<li class="expired"><%= link_to(event_path(e.id)) do %><%= e.start.strftime("%a, %b %e at %l:%M%P") %>
					<span class="count">Full</span>
					<p><%= e.location %></p><% end %>
					</li>
				<% end %>
			<% end %>


			<% @ended.limit(15).each do |e| %>
					<li class="expired"><%= link_to(event_path(e.id)) do %><%= e.start.strftime("%a, %b %e at %l:%M%P") %>
					<span class="count">Ended</span>
					<p><%= e.location %></p><% end %>
					</li>
			<% end %>

		<% end %>

		<% if ! signed_in? %>

			<div class="lastOpen">
				<% @open.each do |e| %>
					<li class="open"><%= link_to(event_path(e.id)) do %><span><%= e.start.strftime("%a, %b %e at %l:%M%P") %></span>
					<span class="count"><%= e.users.count %> / <%= e.needed %></span>
					<p><%= e.location %></p><% end %>
					</li>
				<% end %>
			</div>

			<% @full.each do |e| %>
					<li class="expired"><%= link_to(event_path(e.id)) do %><span><%= e.start.strftime("%a, %b %e at %l:%M%P") %></span>
					<span class="count">Full</span>
					<p><%= e.location %></p><% end %>
					</li>
			<% end %>

			<% @ended.limit(15).each do |e| %>
					<li class="expired"><%= link_to(event_path(e.id)) do %><%= e.start.strftime("%a, %b %e at %l:%M%P") %>
					<span class="count">Ended</span>
					<p><%= e.location %></p><% end %>
					</li>
			<% end %>

		<% end %>

		</ul>

</div>
